<div
  class='border border-grey-400 rounded p-5 my-4'
  {{did-insert this.elementInserted}}>
  <div class="text-xs">Exercise:</div>
  <div class='text-left'>
    {{yield}}
  </div>
  <div class='text-left'>
    {{#if this.errorStatus}}
      <div class='bg-yellow-200 border border-yellow-400 rounded p-10 my-4'>
        Received a {{this.resStatus}} when checking your query.
      </div>
    {{/if}}
    {{#if this.equivalentQuery}}
      <div class='bg-green-200 border border-green-400 rounded p-10 my-4'>
        <p>Correct! Another example query that would work is:</p>
        <pre><code>{{this.validQuery}}</code></pre>
      </div>
    {{/if}}
    {{#if this.nonEquivalentQuery}}
      <div class='bg-red-200 border border-red-400 rounded p-10 my-4'>
        That doesn't look like our answer, try again.
      </div>
    {{/if}}
  </div>
  <div class='w-full'>

    <Yasgui
      @sparqlEndpoint={{this.sparqlEndpoint}}
      @onQueryEventHandler={{this.onQueryEventHandler}}
      {{!-- @yasqeCssClasses={{if this.correctQuery this.correctQueryYasqeCssClasses incorrectQueryYasqeCssClasses}} --}}
    />

  </div>
</div>